@page
@model SemanticBackup.Pages.Account.CreateModel
@{
    ViewData["Title"] = "Create User";
    Layout = "_LayoutNoDirectory";
}

<div class="content">
    <div class="text container">
        <h2>Create Account</h2>
        <div class="ui divider"></div>

        <form method="post" class="database-registration-page">
            <div class="ui segment attached">

                @{
                    if (Model.Status == "Failed")
                    {
                        <div class="ui warning tiny message">Unable to create account </div>
                    }
                    else if (Model.Status == "Success")
                    {
                        <div class="ui success tiny message"> Account created Successfully!</div>
                    }
                    else if (Model.Status == "update")
                    {
                        <div class="ui information tiny message"> Create Account</div>
                    }
                }
                <div class="form-group">
                    <input asp-for="userAccount.Id" type="text" class="form-control" hidden>
                </div>

                <div class="form-group">
                    <label for="EmailAddress">Email </label>
                    <input asp-for="userAccount.EmailAddress" type="text" class="form-control">
                </div>

                <div class="form-group">
                    <label for="Name"> Name</label>
                    <input asp-for="userAccount.FullName" type="text" class="form-control" />
                </div>


                <div class="TimezoneOffset">
                    <label for="TimezoneOffset">TimezoneOffset</label>
                    <input asp-for="userAccount.TimezoneOffset" type="text" class="form-control" />
                </div>

                <div class="Timezone">
                    <label for="Timezone">Timezone</label>
                    <select asp-for="userAccount.Timezone" asp-items="@(new SelectList(TimeZoneInfo.GetSystemTimeZones(), "Value", "Text"))" class="form-control"></select>
                </div>


                <div class="Timezone">
                    <label for="Timezone">Timezone</label>
                    <input asp-for="userAccount.Timezone" type="text" class="form-control" />
                </div>

                <div class="UserAccountType">
                    <label for="UserAccountType">UserAccountType</label>
                    <input asp-for="userAccount.UserAccountType" type="text" class="form-control" />
                </div>
                <div class="LastLoginToken">
                    <label for="LastLoginToken">LastLoginToken</label>
                    <input asp-for="userAccount.LastLoginToken" type="text" class="form-control" />
                </div>
                <div class="LastLoginUTC">
                    <label for="LastLoginUTC">LastLoginUTC</label>
                    <input asp-for="userAccount.LastLoginUTC" type="text" class="form-control" />
                </div>

                <div class="Password">
                    <input asp-for="userAccount.Password" type="text" class="form-control" hidden />
                </div>

                <div class="card-footer text-right">
                    <div class="ml-auto">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </div>
            </div>
        </form>



    </div>
</div>
