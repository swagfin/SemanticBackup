{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "LiteDbPersistanceOptions": {
    "ConnectionString": "{{env}}\\data\\database.secured.db"
  },
  "PersistanceOptions": {
    "ServerDefaultTimeZone": "E. Africa Standard Time",
    "DefaultBackupExpiryAgeInDays": 14,
    "MaximumBackupRunningThreads": 4,
    "DefaultBackupDirectory": "c:\\backups\\",
    "EnsureDefaultBackupDirectoryExists": true,
    "BackupFileSaveFormat": "{{database}}\\{{database}}-{{datetime}}.{{databasetype}}.bak",
    "CompressBackupFiles": true
  }
}
