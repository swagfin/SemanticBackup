@page
@model SemanticBackup.WebClient.Pages.Databases.RegisterDatabaseModel
@{
    ViewData["Title"] = "Register Database";
}

<div class="content">
    <div class="text container">
        <h4 style="text-align:center;" class="ui header blue large">Register Database</h4>
        <form asp-page="RegisterDatabase" method="post">
            <div class="form-group">
                <label for="Server">Server</label>
                <input asp-for="backupDatabaseRequest.Server" type="text" value="127.0.0.1" class="form-control" required>
            </div>
       
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="Username">Username</label>
                    <input asp-for="backupDatabaseRequest.Username" type="text" autocomplete="off" class="form-control" required>
                </div>
                <div class="form-group col-md-6">
                    <label for="Password">Password</label>
                    <input asp-for="backupDatabaseRequest.Password" type="password" autocomplete="off" class="form-control" required>
                </div>
            </div>
            <div class="form-group">
                <label for="DatabaseName">Database Name</label>
                <input asp-for="backupDatabaseRequest.DatabaseName" type="text" class="form-control" required>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="Port">Port</label>
                    <input asp-for="backupDatabaseRequest.Port" type="text" value="0" autocomplete="off" class="form-control" required>
                </div>
                <div class="form-group col-md-6">
                    <label for="DatabaseType">DatabaseType</label>
                    <select class="selectpicker form-control" asp-for="backupDatabaseRequest.DatabaseType" required>
                        @{
                            foreach(var dbType in Enum.GetValues(typeof(BackupDatabaseInfoDbType)).Cast<BackupDatabaseInfoDbType>())
                            {
                                <option>@(dbType)</option>
                            }
                        }
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label for="Description">Description</label>
                <input asp-for="backupDatabaseRequest.Description" autocomplete="off" type="text" class="form-control">
            </div>
            <div class="form-row">
                @*<div class="form-group col-md-6">
                    <label for="DateRegistered">DateRegistered</label>
                    <input asp-for="backupDatabaseRequest.BackupExpiryAgeInDays" type="text" class="form-control" required>
                    </div>*@
                <div class="form-group col-md-6">
                    <label for="BackupExpiryAgeInDays">Delete Old Backups After (Days)</label>
                    <input asp-for="backupDatabaseRequest.BackupExpiryAgeInDays" autocomplete="off" type="number" value="7" class="form-control" required>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Register Database</button>
        </form>
    </div><!-- container -->
</div><!-- content -->